@model IEnumerable<GummiBearKingdom.Models.Product>

@{ 
    ViewData["Title"] = "Gummy Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>

<div class="d-flex p-3 justify-content-center">
    @foreach (var product in Model)
    {
        <div class="card" style="width: 20rem;">
            <img class="card-img-top product-images" src="@Url.Content(product.ImageURL)" alt="Card image cap">
            <div class="card-block">
                <h4 class="card-title">@Html.DisplayFor(model => product.Name)</h4>
                <p class="card-text">@Html.DisplayFor(model => product.Description)</p>
            </div>
        </div>
    }
</div>
